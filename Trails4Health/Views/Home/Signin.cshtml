@model Trails4Health.Models.Signin
@{
    ViewData["Title"]= "Signin";
}
<h1>Sign In</h1>

<form method="post" action="Index" class="form-horizontal">
<fieldset>
  
    <div class="form-group">
        <label asp-for="UserName" class="col-lg-2 control-label">Name</label>
        <div class="col-lg-6">
            <input type="text" class="form-control" id="inputEmail" placeholder="Username" asp-for="UserName">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="UserPass" class="col-lg-2 control-label">Password</label>
        <div class="col-lg-6">
            <input type="text" class="form-control" id="inputEmail" placeholder="Password" asp-for="UserPass">
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-6 col-lg-offset-2">
            <button type="reset" class="btn btn-default">Cancel</button>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</fieldset>
</form>