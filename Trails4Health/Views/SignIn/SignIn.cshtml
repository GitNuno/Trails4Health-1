@model Trails4Health.Models.SignIn
@{
    ViewData["Title"]= "Page of Sign In";
}

<form asp-action="SignIn" method="post">
    <div class="panel panel-primary border-primary" style="margin-top:2ex;">
        <div class="panel-heading bg-primary border-primary">
            <h3 class="panel-title">SignIn</h3>
        </div>

        <div class="panel-body">
            <div class="form-group">
                <label asp-for="UserName">Username:</label>
                <input asp-for="UserName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="UserPass">Password:</label>
                <input asp-for="UserPass" class="form-control" type="password"/>
            </div>
            <div asp-validation-summary="All"></div>
        </div>

        <div class="panel-footer">
            <button type="submit" class="btn btn-primary">Submit response</button>
        </div>
    </div>
</form>